{
  "manifest_version": 2,
  "name": "UML anywhere",
  "short_name": "uml-anywhere",
  "version": "1.0",
  "description": "Simple tool to use PlantUML server.",
  "author": "ryskiwt",
  "permissions": [
    "tabs"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png",
    "512": "icons/icon512.png"
  },
  "browser_action": {
    "default_icon": {
      "32": "icons/icon32.png"
    },
    "default_title": "uml-anywhare"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  }
}
